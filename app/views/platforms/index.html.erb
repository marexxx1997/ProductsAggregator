 <% if notice %>
  <aside class="alert alert-success alert-dismissible fade show mt-3" id="notice"><%= notice %></aside>
 <% end %> 

<h1>Platforms</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col text-end">
      <%= link_to 'Add', new_platform_path, class:'btn btn-success' %>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th>URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td class="name"><%= platform.name %></td>
        <td class="logo_image">
          <%= image_tag(platform.logo_url, class: 'list_image') %>
        </td>
        <td><%= link_to platform.url, platform.url %></td>
<!--        <td><%#= link_to 'Edit', edit_platform_path(platform) %></td> -->      
        <td><%= link_to edit_platform_path(platform) do %><i class="bi bi-pencil-square"></i><% end %></td>
        <!--<td><%#= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <td>
          <%= link_to platform, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="bi bi-trash"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
