<!DOCTYPE html>
<html>
  <head>
</head>
    <body>
      <% if notice %>
        <aside class="alert alert-success alert-dismissible fade show mt-3" id="notice"><%= notice %></aside>
      <% end %>
      <h1>Products</h1>
      <div class="container-fluid">
        <div class="row">
          <div class="col text-end">
            <%#= link_to 'Candidates', class:'btn btn-primary', data: { bs_toggle: 'modal', bs_target: '#exampleModal'}%>
            <%= link_to 'Candidates', candidates_path, class:'btn btn-primary' %>
            <%= link_to 'Add', new_product_path, class:'btn btn-success' %>
          </div>
        </div>
      </div>
      <div class="container-fluid  mt-3">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <%= form_tag products_path, method: :get, class:"d-flex" do%>
          <%= text_field_tag :search, params[:search], class:"form-control me-2", placeholder: "Search by name"%>
          <%= button_tag type: "submit", class: "btn btn-primary" do%>
            <i class="bi bi-search"></i>
          <%end%>
          <%end%>
        </div>
      </div>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td class="name"><%= product.name %></td>
              <td><%= link_to edit_product_path(product) do %><i class="bi bi-pencil-square"></i><% end %></td>
              <td>
                <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="bi bi-trash"></i><% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
        
    </body>
  
</html>
